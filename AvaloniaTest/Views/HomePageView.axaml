<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="470"
             xmlns:vm="using:AvaloniaTest.ViewModels"
             x:DataType="vm:HomePageViewModel"
             x:Class="AvaloniaTest.Views.HomePageView">


  <Panel>
    
    <Carousel Name="SlideMenu">
      <Canvas
        HorizontalAlignment="Center"
        Width="1024"
        Height="470">
        <!--KOLUMNA I-->
        <!--PIERWSZE OKIENKO-->
        <Border  
           Canvas.Top="10" Canvas.Left="10"
           BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="2"                     
                        BoxShadow="2 2 2 2 Gray"
                        CornerRadius="10">
          <StackPanel         
            Width="243.5"
            Height="146.5"
            VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">
              <PathIcon Data="{StaticResource ClockRegular}" VerticalAlignment="Center" Margin="10,8,10,0"></PathIcon>
              <TextBlock Margin="10,10,0,0" Text="{Binding CurrentDay}" FontSize="22" VerticalAlignment="Center"></TextBlock>
            </StackPanel>           
            <Rectangle Height="2" Width="243.5" Fill="{DynamicResource BorderColor}" Margin="0,10,0,0"></Rectangle>
            <StackPanel Orientation="Horizontal"   >
              <TextBlock  FontSize="50" Margin="35,10,0,0" Text="{Binding Currenttime}"></TextBlock>
              <Image Source="{Binding Mybitmap}" Height="53" Width="53" VerticalAlignment="Center" Margin="10,8,10,0"></Image>   
            </StackPanel>
            <TextBlock Margin="0,5,0,0" HorizontalAlignment="Center" Text="{Binding CurrentDate}" FontSize="15"></TextBlock>
          </StackPanel>
        </Border>
        <!--DRUGIE OKIENKO-->
        <Border
              Canvas.Top="166.5" Canvas.Left="10"
              BorderBrush="{DynamicResource BorderColor}"
              BorderThickness="2"                     
              BoxShadow="2 2 2 2 Gray"
              CornerRadius="10"
              >
          <StackPanel
                Width="243.5"
                Height="293"
                >
            <TextBlock HorizontalAlignment="Center">POGODA INTERNETOWA</TextBlock>
 
          </StackPanel>
        </Border>

        <!--KOLUMNA II-->
        <Border
          Canvas.Top="10" Canvas.Left="263.5"
          BorderBrush="{DynamicResource BorderColor}"
          BorderThickness="2"
          BoxShadow="2 2 5 2 Gray"
          CornerRadius="10">
            <!--pierwszy panel-->
        <StackPanel       
          Width="243.5"
          Height="196.5"
          VerticalAlignment="Center">
          
          <StackPanel  Orientation="Horizontal">
            <PathIcon Data="{StaticResource HomeRegular}" VerticalAlignment="Top" Margin="10,8,0,8"></PathIcon>
            <PathIcon Data="{StaticResource ArrrowLeft}" Height="10" Margin="-4,14,10,8" VerticalAlignment="Top" ></PathIcon>

            <TextBlock VerticalAlignment="Center"  FontWeight="DemiBold" Margin="20,5,0,0">TEMPERATURA</TextBlock>
          </StackPanel>

          <Rectangle Height="2" Width="243.5" Fill="{DynamicResource BorderColor}" Margin="0,10,0,0"></Rectangle>
          <StackPanel Orientation="Horizontal">
            <Image Source="avares://AvaloniaTest/Assets/Images/thermometer.png" Width="50" Height="50" Margin="0,10,0,0" ></Image>
            <TextBlock Text="{Binding Indoortemperature}" FontWeight="DemiBold" FontSize="35" VerticalAlignment="Center" Margin="10,10,0,0">C</TextBlock>
          </StackPanel>
        
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" >
            <StackPanel>
              <TextBlock Margin="0,15,0,0" >MAX</TextBlock>
              <TextBlock Text="{Binding Indoortodaymaxtemp}" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
            </StackPanel>
            <Line StartPoint="0,1" EndPoint="0,60" Margin="0,15,0,0" Stroke="{DynamicResource LightBorderColor}" StrokeThickness="2" StrokeDashArray="3"/>
            <StackPanel Orientation="Vertical">
              <TextBlock Foreground="{DynamicResource FontBlue}" Margin="0,15,0,0" >WCZORAJ</TextBlock>
              <TextBlock Text="{Binding Indoorysterdaytemp}" FontSize="19" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
              <PathIcon  Foreground="{DynamicResource LightBorderColor}"  Data="{Binding Indoortemperaturechangeicon}" VerticalAlignment="Center" Margin="-55,-23,5,0"></PathIcon>
            </StackPanel>
           
            <Line StartPoint="0,1" EndPoint="0,60" Margin="0,15,0,0" Stroke="{DynamicResource LightBorderColor}" StrokeThickness="2" StrokeDashArray="3"/>
            <StackPanel>
              <TextBlock Margin="0,15,0,0">MIN</TextBlock>
              <TextBlock Text="{Binding Indoortodaymintemp}" HorizontalAlignment="Center" Margin="0,10,0,0">10</TextBlock>            
            </StackPanel>

          </StackPanel>


        </StackPanel>
          
          
        </Border>

        <!--KOLUMNA III-->
        <StackPanel
  Canvas.Top="10" Canvas.Left="517"
  Background="Beige"
  Width="243.5"
  Height="450"
  VerticalAlignment="Center">
          <TextBlock>NAPIS</TextBlock>
        </StackPanel>

        <!--KOLUMNA IV-->
        <StackPanel
  Canvas.Top="10" Canvas.Left="770.5"
  Background="Beige"
  Width="243.5"
  Height="450"
  VerticalAlignment="Center">
          <TextBlock>NAPIS</TextBlock>
        </StackPanel>


      </Canvas>
      
      
      
      <Canvas
        HorizontalAlignment="Center"
        Width="1024"
        Height="470">
        <Border Canvas.Left="25" Canvas.Top="25" Background="Red" Width="200" Height="200" Margin="10" >
          <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <StackPanel Spacing="10" Height="140" Orientation="Horizontal" HorizontalAlignment="Center" >
              <TextBlock>jeden</TextBlock>
              <TextBlock>dwa</TextBlock>
              <TextBlock>trzy</TextBlock>
            </StackPanel>
            <StackPanel Spacing="10" Height="60" Orientation="Horizontal">
              <TextBlock>cztery</TextBlock>
              <TextBlock>piec</TextBlock>
              
              <Button>guzik</Button>
            </StackPanel>
          </StackPanel>
        </Border>
        <Canvas Width="300" Height="300" Canvas.Left="250" Canvas.Top="25">
          <Image Source="/Assets/Images/windarrow.png" Canvas.Left="100" Canvas.Top="50">
            <Image.RenderTransform>
              <RotateTransform Angle="{Binding Angle}" CenterX="0.5" CenterY="0.5" />
            </Image.RenderTransform>
          </Image>
          
          <Ellipse Width="200" Height="200" Fill="Transparent" Stroke="{DynamicResource BorderColor}" StrokeThickness="2.5"  StrokeDashArray="4.8" Canvas.Left="50" Canvas.Top="50" />
          <Ellipse Width="20" Height="20" Fill="Red" Canvas.Left="140" Canvas.Top="140" />
          <Ellipse Width="170" Height="170" Fill="Transparent" Stroke="{DynamicResource LightBorderColor}" StrokeThickness="5" Canvas.Left="65" Canvas.Top="65"/>
          <TextBlock  Canvas.Top="125" Canvas.Left="130" FontSize="50" Text="{Binding Direction}"></TextBlock>
         
          <Path Stroke="Yellow" StrokeThickness="3" Fill="Transparent" Canvas.Top="{Binding Arrowy}" Canvas.Left="{Binding Arrowx}">
            <Path.Data>
              <!-- Definicja strzałki "M0,0 L0,10 L20,5 Z" -->
              <PathGeometry Figures="M0,0 L0,10 L20,5 Z"/>
            </Path.Data>
            <Path.RenderTransform>
              
              <!-- Transformacja dla obrotu strzałki -->
              <TransformGroup>
                <!-- Przesunięcie strzałki na obwód okręgu -->
          
                <RotateTransform Angle="{Binding Angle}"/>
                <!-- Kąt obrotu strzałki -->
              </TransformGroup>
            </Path.RenderTransform>
          </Path>
          <Path Stroke="Yellow" StrokeThickness="3" Fill="Transparent" Canvas.Top="{Binding Circley}" Canvas.Left="{Binding Circlex}">
            <Path.Data>
              <!-- Definicja strzałki "M0,0 L0,10 L20,5 Z" -->
              <PathGeometry Figures="M 10 0 A 1 1 0 0 0 10 20 A 1 1 0 0 0 10 0"/>
            </Path.Data>
          </Path>
          <Ellipse Width="200" Height="200" Fill="Red"
                     Stroke="{DynamicResource BorderColor}"
                     StrokeThickness="10"
                     StrokeDashArray="60"
                     StrokeDashOffset="{Binding Angle}"
                     Canvas.Left="300" Canvas.Top="50" >
            <Ellipse.RenderTransform>
              <RotateTransform Angle="270" />
            </Ellipse.RenderTransform>
          </Ellipse>
        </Canvas>
<StackPanel Canvas.Top="350" Canvas.Left="15" Width="980" Height="50">
  <TextBlock Text="{Binding #Myslider.Value}"
               HorizontalAlignment="Center"/>
  <Slider Name="Myslider" Value="{Binding SliderValue, Mode=TwoWay}" Maximum="360" IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="Outside"/>

</StackPanel>
      </Canvas>
           
      


    </Carousel>
    <Panel Margin="20" VerticalAlignment="Bottom"  >
      <Button Background="{DynamicResource LightBorderColor}" Click="Previous">&lt;</Button>
      <Button Background="{DynamicResource LightBorderColor}" Click="Next"
              HorizontalAlignment="Right">&gt;</Button>
    </Panel>

  </Panel>


</UserControl>
